{
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "target": "es2016",
      "noImplicitAny": true,
      "moduleResolution": "node",
      // "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"]
  }
  